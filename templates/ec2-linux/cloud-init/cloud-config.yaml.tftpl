#cloud-config
cloud_final_modules:
  - [scripts-user, always]
hostname: ${hostname}

users:
  - name: ${linux_user}
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false

packages:
  - python3-pip
  - python3-venv
  - curl

runcmd:
  - apt-get update || yum update -y || true
  - mkdir -p /home/${linux_user}
  - chown ${linux_user}:${linux_user} /home/${linux_user}
